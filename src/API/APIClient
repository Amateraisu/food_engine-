        try {
            JSONObject googlObject = new JSONObject(readUrl("https://maps.googleapis.com/maps/api/distancematrix/json?origins="+placeName+"&destinations="+destination+"&key=AIzaSyAKaJMO3CQcvpf2iweobZjts8qI0lOZkfk"));
            JSONArray destination_addresses = (JSONArray) googlObject.get("destination_addresses");    
            System.out.println(destination_addresses);
        } catch (Exception e) {
